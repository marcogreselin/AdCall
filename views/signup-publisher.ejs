<body class="registration-page">
<header>
    <div class="container">
        <a href="/" title="Take me home">
            <img class="logo" src="../images/logo.png">
        </a>
        <p>
        <h1>Publishers Sign Up</h1>
        </p>
    </div>
</header>

<main>
    <div class="registration-mask">
        <form>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">Company Name</div>
                        <div class="col-md-8"><input type="text"></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">Website</div>
                        <div class="col-md-8"><input type="text"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">email address</div>
                        <div class="col-md-8"><input type="text"></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">Password</div>
                        <div class="col-md-8"><input type="password"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">Address</div>
                        <div class="col-md-8"><input type="text"></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">Phone Number</div>
                        <div class="col-md-8"><input type="text"></div>
                    </div>
                </div>
            </div>
            <button formaction="/console">Sign Up!</button>
        </form>
    </div>


</main>

