<header>
    <div class="container">
        <nav>

            <a href="/console" title="Take me home">
                <img class="logo" src="../images/logo-loggedin.png">
            </a>

            <% if(locals.nav){ %>
                <ul class="left">
                    <% for(var i=0; i<locals.nav.length; i++) { %>
                        <li><a href="<%= locals.nav[i].link %>"><%= locals.nav[i].text %></a></li>
                    <% } %>
                </ul>
            <% } %>

            <ul class="right">
                <li>Welcome <%= locals.user %></li>
                <li><a href="../auth/logout">Logout</a></li>
            </ul>
        </nav>
    </div>
</header>